<%- include("partials/header"); %>
<h1>Home</h1>
<p><%= content %></p> 

<% posts.forEach(function(post){ %>
    <% const postLimitLen = 100 %>
    <h1><%= post.title %></h1>
    <p><%= post.content.substring(0, postLimitLen) + "..." %>
        <a href="/posts/<%= post.title %>">Read more</a> 
    </p>
    
<% }) %>

<%- include("partials/footer"); %>